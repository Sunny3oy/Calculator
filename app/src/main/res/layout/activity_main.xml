<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/doge"
    tools:context="gertnergroup.calculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/first_doge_number"
        android:id="@+id/num1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/doge1"
        android:layout_below="@+id/num1"
        android:layout_centerHorizontal="true"
        android:width="400dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/second_doge_number"
        android:id="@+id/num2"
        android:layout_below="@+id/doge1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/doge2"
        android:layout_below="@+id/num2"
        android:layout_centerHorizontal="true"
        android:width="400dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/doge_answer"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doge2"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/plus"
            android:background="@android:color/transparent"
            android:textSize="40sp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/sub"
            android:id="@+id/sub"
            android:background="@android:color/transparent"
            android:textSize="40sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/muti"
            android:id="@+id/muti"
            android:background="@android:color/transparent"
            android:textSize="40sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/div"
            android:id="@+id/div"
            android:background="@android:color/transparent"
            android:textSize="40sp" />
    </GridLayout>

</RelativeLayout>
